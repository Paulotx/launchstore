<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="text"
            name="email"
            placeholder="Digite seu email"
            value="{{ user.email }}"
            onblur="Validade.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Escolha uma senha segura"
        >
    </div>
</div>