{% extends 'layout.njk' %}

{% block content %}

<section class="password container form">
    <form method="POST" action="/users/forgot-password">
        <div class="header">
            <h3>Esqueceu a senha?</h3>
        </div>        

        <div class="item">
            <div>Email</div>
            <div class="input">
                <input 
                    type="text"
                    name="email"
                    placeholder="Digite o email cadastrado"
                    value="{{ user.email }}"
                    onblur="Validade.apply(this, 'isEmail')"
                >
            </div>
        </div>

        <button class="button" type="submit">Recuperar senha</button>
    </form>    
</section>

{% endblock content %}